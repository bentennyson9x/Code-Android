<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FlashScreen">

    <TextView
        android:id="@+id/titleApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="140dp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="Financial Management"
        android:textColor="#c6414040"

        android:textSize="40dp"
        android:textStyle="bold"
        app:fontFamily="cursive" />
    <pl.droidsonroids.gif.GifImageView
        android:layout_below="@+id/titleApp"
        android:layout_marginTop="50dp"
        android:id="@+id/AppGif"
        android:layout_width="100dp"
        android:layout_centerHorizontal="true"
        android:layout_height="100dp"
        android:src="@drawable/money"

        />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/AppGif"
        style="@style/CustomProgressBar"
        android:layout_width="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0%"
        android:id="@+id/progress_percent"
        android:textColor="#c6414040"
        android:layout_below="@+id/progressBar"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="14dp"
        android:text="Developed By Khoi Nguyen - CNTT - HVCNBCVT - BKAP"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold" />

</RelativeLayout>