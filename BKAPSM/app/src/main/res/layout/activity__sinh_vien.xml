<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="5dp"
    tools:context=".Activity_SinhVien">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên sinh viên"
        android:id="@+id/activitySinhVien_tenSinhVien"
        android:layout_marginTop="20dp"
        />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/activitySinhVien_tenSinhVien"
        android:layout_marginTop="20dp"
        style="@style/Widget.AppCompat.TextView.SpinnerItem"
        android:id="@+id/activitySinhVien_spinner"
        >
    </Spinner>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/activitySinhVien_spinner"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/activitySinhVien_chon_gioi_tinh"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giới tính"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:id="@+id/activitySinhVien_gioitinh"
            />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/activitySinhVien_gioitinh"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <RadioButton
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nam"
                />
            <RadioButton
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nữ"
                />
        </RadioGroup>
    </TableRow>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activitySinhVien_chon_gioi_tinh"
        android:layout_marginTop="20dp"
        android:id="@+id/activitySinhVien_Email"
        android:hint="Email"
        android:paddingHorizontal="10dp"
        />
 <TableRow
     android:layout_height="wrap_content"
     android:layout_width="match_parent"
     android:layout_below="@+id/activitySinhVien_Email"
     android:id="@+id/activitySinhVien_chon_NgaySinh"
     android:orientation="horizontal"
     android:layout_marginTop="10dp"
     >
     <EditText
         android:layout_width="150dp"
         android:layout_height="wrap_content"
         android:hint="Ngày sinh"
         android:id="@+id/activitySinhVien_ngaySinh"
         />
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="( 1998 - 22 - 10 )"
         android:layout_marginLeft="10dp"
         />

 </TableRow>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activitySinhVien_chon_NgaySinh"
        android:hint="Số điện thoại"
        android:id="@+id/activitySinhVien_sdt"
        android:layout_marginTop="20dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_above="@+id/activitySinhVien_Button_them_sua_xoa"
        android:background="@android:color/black"
        android:layout_marginBottom="5dp"
        ></View>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/activitySinhVien_Button_them_sua_xoa"
        android:weightSum="90"
        android:layout_marginBottom="10dp"
        android:paddingHorizontal="20dp"
        >
        <Button
            android:text="Thêm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:background="@drawable/khung_button_activity_sinhvien"
            />
        <Button
            android:text="Sửa"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:textColor="#afafaf"
            android:layout_marginLeft="10dp"
            android:background="@drawable/khung_button_activity_sinhvien"
            />
        <Button
            android:text="Xóa"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#afafaf"
            android:layout_weight="30"
            android:layout_marginLeft="10dp"
            android:background="@drawable/khung_button_activity_sinhvien"
            />
    </TableRow>

</RelativeLayout>