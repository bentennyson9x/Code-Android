<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#c6f9f3"
    android:weightSum="1000"
    tools:context=".AddSinhVien">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Thêm Sinh Viên"
    android:gravity="center"
    android:textColor="@android:color/holo_red_light"
    android:textSize="32dp"
    android:layout_weight="50"
    />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/insertNameSV"
        android:hint="Tên Sinh Viên"
        android:paddingHorizontal="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Năm Sinh"
        android:layout_marginTop="10dp"
        android:id="@+id/insertYearOfBirth"
        android:paddingHorizontal="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Địa Chỉ"
        android:layout_marginTop="10dp"
        android:id="@+id/insertAddress"
        android:paddingHorizontal="10dp"
        />
    <TableRow
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1000"
        android:layout_marginTop="30dp"
        android:gravity="center"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm"
            android:id="@+id/btnThemSV"
            android:layout_marginRight="30dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:id="@+id/btnHuyThem"
            />
    </TableRow>
</LinearLayout>