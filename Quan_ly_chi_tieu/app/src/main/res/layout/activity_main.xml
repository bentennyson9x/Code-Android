<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:text="Financial Management"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:textColor="#c6414040"
        android:id="@+id/SignIn"
        android:textSize="30dp"
        />
<ImageView
    android:layout_below="@+id/SignIn"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:src="@drawable/money"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="30dp"
    android:id="@+id/logoMainactivity"
    />
 <TableRow
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:id="@+id/User"
    android:background="@drawable/khung_sign_in"
    android:layout_below="@+id/logoMainactivity"
    android:orientation="horizontal"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    >
    <ImageView
        android:src="@drawable/user_icon"
        android:layout_height="wrap_content"
        android:id="@+id/iconUser"
        android:layout_width="wrap_content"
        />
    <EditText
        android:background="@android:color/transparent"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/User_input"
        android:focusableInTouchMode="true"
        android:hint="User Name"
        android:paddingLeft="10dp"
        />
</TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/khung_sign_in"
        android:layout_below="@+id/User"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/Password"
        >
        <ImageView
            android:src="@drawable/key_icon"
            android:id="@+id/iconPassword"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />
        <EditText
            android:background="@android:color/transparent"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:hint="Password"
            android:focusableInTouchMode="true"
            android:id="@+id/Password_input"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            />
    </TableRow>
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Password"
        android:layout_marginTop="20dp"
        android:text="Sign In"
        android:id="@+id/SignIn_button"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_anim"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember Me"
        android:id="@+id/RememberMe"
        android:layout_below="@+id/SignIn_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />
        <Button
            android:text="forgot Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/ViewCenter"
            android:layout_below="@+id/RememberMe"
            android:layout_marginTop="6dp"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#c6414040"
            android:layout_marginRight="20dp"
            android:background="@android:color/transparent"
            />
        <View android:layout_height="2dp"
            android:layout_width="30dp"
            android:background="#767676"
            android:id="@+id/ViewCenter"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/RememberMe"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            ></View>
        <Button
            android:text="Sign Up Account"
            android:background="@android:color/transparent"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/ViewCenter"
            android:layout_below="@+id/RememberMe"
            android:layout_marginTop="6dp"
            android:textColor="#c6414040"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Or you can sign in with : "
        android:layout_below="@+id/ViewCenter"
        android:layout_marginTop="30dp"
        android:id="@+id/oryoucansigninwith"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#c6414040"
        />
    <ImageButton
        android:background="@drawable/fb"
        android:layout_width="80dp"
        android:layout_below="@+id/oryoucansigninwith"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="9dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        />
    <ImageButton
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:background="@drawable/google_plus"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/oryoucansigninwith"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>