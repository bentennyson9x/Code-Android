<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:weightSum="1000"
    tools:context=".activity.SignUp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="40sp"
        android:textColor="#c6414040"
        android:fontFamily="cursive"
        android:gravity="center"
        android:layout_weight="100"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name Account "
        android:id="@+id/signUpNameAccount"
        android:layout_weight="50"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password "
        android:id="@+id/signUpPassword"
        android:inputType="textPassword"
        android:layout_weight="50"
        />
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        >
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:id="@+id/signUpFirstName"
            android:layout_weight="50"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="LastName "
            android:id="@+id/signUpLastName"
            android:layout_weight="50"
            />
    </TableRow>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Middle Name "
        android:id="@+id/signUpMiddleName"
        android:layout_weight="50"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email "
        android:id="@+id/signUpEmail"
        android:layout_weight="50"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone Number"
        android:id="@+id/signUpPhoneNumber"
        android:layout_weight="50"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:id="@+id/signUpAddress"
        android:layout_weight="50"
        />
    <Button
        android:layout_marginTop="40dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:background="@drawable/button_sign_in"
        android:id="@+id/signUpBtnConfirm"
        />
</LinearLayout>