<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
            <LinearLayout
                android:background="#e75454"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:weightSum="9"
                android:id="@+id/Header"
                >
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.3"
                    android:background="@android:color/transparent"
                    android:src="@drawable/menu_bar" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="8.4"
                    android:text="Over View"
                    android:fontFamily="cursive"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_gravity="center_horizontal"
                    />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.3"
                    android:background="@android:color/transparent"
                    android:src="@drawable/statistic" />
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_payment"
                android:layout_below="@+id/Header"
                android:paddingLeft="6dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingRight="6dp"
                android:layout_marginBottom="1dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/tai_chinh_hien_tai"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:text="Finance initially :"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:paddingLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:id="@+id/Total_Finance_initially"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:paddingLeft="10dp"
                            android:text="100000000 "
                            android:textColor="#e75454"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                    <View
                        android:layout_below="@+id/tai_chinh_hien_tai"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:id="@+id/view1"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="6dp"
                        android:background="#51afafaf"></View>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Expenditure"
                        android:textAlignment="textEnd"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/view1"
                        android:id="@+id/total_expenditure"
                        />

                    <com.github.mikephil.charting.charts.PieChart
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/total_expenditure"
                        android:layout_centerHorizontal="true"
                        android:layout_width="match_parent"
                        android:background="@android:color/transparent"
                        android:layout_height="330dp"
                        android:id="@+id/PieChart"
                        ></com.github.mikephil.charting.charts.PieChart>
                    <View
                        android:layout_below="@+id/PieChart"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:id="@+id/view2"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="6dp"
                        android:background="#51afafaf"></View>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/The_current_financial_situation"
                        android:layout_below="@+id/view2"
                        >
                        <TextView
                            android:text="The current financial situation :"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:paddingLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:text="100000000 "
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:paddingLeft="10dp"
                            android:gravity="center"
                            android:textColor="#e75454"
                            android:layout_marginTop="10dp"
                            android:id="@+id/The_current_financial_situation_text"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            />

                    </LinearLayout>
                    <View
                        android:layout_below="@+id/The_current_financial_situation"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:id="@+id/view3"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="6dp"
                        android:background="#51afafaf"></View>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:id="@+id/Note"
                        android:layout_below="@+id/view3"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Recent Notes : "
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:id="@+id/RecentNotes"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            />
                        <ListView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/RecentNotes"
                            android:layout_marginTop="20dp"
                            android:footerDividersEnabled="false"
                            android:dividerHeight="6dp"
                            android:focusable="false"
                            android:divider="@android:color/transparent"
                            android:id="@+id/CacKhoanGhiChep"
                            android:layout_marginBottom="10dp"
                            ></ListView>
                    </RelativeLayout>
                </RelativeLayout>
            </ScrollView>


</RelativeLayout>