<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="12dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    >

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/icon_display_payAmount_reason"
        android:src="@drawable/hambuger"
        android:layout_marginTop="5dp"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ăn uống"
            android:layout_toRightOf="@id/icon_display_payAmount_reason"
            android:layout_marginLeft="10dp"
            android:id="@+id/text_display_payAmount_reason"
            android:textColor="@android:color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:text="0đ"
            android:id="@+id/amount_display_payAmount_reason"
            android:textColor="@android:color/holo_red_dark"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_marginTop="5dp"
            android:id="@+id/description_display_payAmount_reason"
            android:layout_below="@+id/text_display_payAmount_reason"
            android:layout_toRightOf="@+id/icon_display_payAmount_reason"
            android:layout_marginLeft="10dp"
            />
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/amount_display_payAmount_reason"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        >
        <ImageView
            android:src="@drawable/salary"
            android:layout_height="17dp"
            android:layout_width="17dp"
            android:id="@+id/IconStylePay_display_payAmount_reason"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Ví"
            android:id="@+id/TextStylePay_display_payAmount_reason"
            android:layout_marginLeft="7dp"
            />
    </TableRow>
</RelativeLayout>