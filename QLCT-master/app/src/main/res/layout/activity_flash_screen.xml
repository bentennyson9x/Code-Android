<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1000"
    tools:context=".activity.FlashScreen">

    <TextView
        android:id="@+id/titleApp"
        android:layout_weight="400"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="Financial Management"
        android:textColor="#c6414040"
        android:textSize="40dp"
        android:textStyle="bold"
        app:fontFamily="cursive" />
    <pl.droidsonroids.gif.GifImageView
        android:layout_below="@+id/titleApp"
        android:id="@+id/AppGif"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="100dp"
        android:src="@drawable/money"
        />
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/AppGif"
        style="@style/CustomProgressBar"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0%"
        android:id="@+id/progress_percent"
        android:textColor="#c6414040"
        android:layout_below="@+id/progressBar"
        android:textStyle="bold"
        android:textSize="17sp"
        android:gravity="center"
        android:layout_marginTop="12dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="600"
        android:gravity="bottom"
        android:paddingBottom="15dp"
        android:text="Developed By Khoi Nguyen - KHMT - HVCNBCVT - BKAP"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold" />

</LinearLayout>